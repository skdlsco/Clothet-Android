<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="250dp"
    android:layout_height="140dp"
    android:layout_gravity="center"
    android:orientation="vertical">

    <android.support.constraint.Guideline
        android:id="@+id/info_gl_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45" />

    <android.support.constraint.Guideline
        android:id="@+id/info_gl_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#dcdcdc"
        app:layout_constraintBottom_toBottomOf="@id/info_gl_center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/info_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanumbarungothicbold"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/info_gl_center"
        app:layout_constraintLeft_toLeftOf="@id/info_gl_left"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="코디 1" />

    <TextView
        android:id="@+id/info_text_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanumbarungothicbold"
        android:text="카테고리"
        android:textColor="@color/colorBlack"
        android:textSize="9sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/info_gl_left"
        app:layout_constraintTop_toTopOf="@id/info_gl_center"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/info_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanumbarungothicbold"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@id/info_text_category"
        app:layout_constraintTop_toBottomOf="@id/info_text_category"
        tools:text="바지" />

    <TextView
        android:id="@+id/info_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/nanumbarungothicbold"
        android:text="사이즈"
        android:textColor="@color/colorBlack"
        android:textSize="9sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/info_text_category"
        app:layout_constraintRight_toRightOf="@id/info_text_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/info_gl_center"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/info_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanumbarungothicbold"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@id/info_text_size"
        app:layout_constraintTop_toBottomOf="@id/info_text_size"
        tools:text="95" />

    <TextView
        android:id="@+id/info_text_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/nanumbarungothicbold"
        android:text="색상"
        android:textColor="@color/colorBlack"
        android:textSize="9sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/info_text_size"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/info_gl_center"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/info_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanumbarungothicbold"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@id/info_text_color"
        app:layout_constraintTop_toBottomOf="@id/info_text_color"
        tools:text="오렌지" />
</android.support.constraint.ConstraintLayout>